<h2>Books</h2>



<% @books.each do |book| %>
  <div class="book-box">
    <div class="book-comment">
      <span class="book-body"><%= book.body %></span>
      <span class="book-title"><%=link_to book.title, book_path(book.id) %></span>
    </div>
  </div>
<div>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
</div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="d-flex row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th><th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th><th><%= @user.name %></th>
          </tr>
        </tbody>
      </table>
      <div class="d-flex row">
      <i class="fa-solid fa-user-gear"></i>
      <font-awesome-icon icon="fa-solid fa-user-gear" />
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <div>Title</div>
        <%= f.text_field :title %>
      <div>Opinion</div>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>
