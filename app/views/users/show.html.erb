<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="d-flex row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th><th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th><th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="d-flex row">
      <div class="col-md-3">
      <div class="btn btn-outline-secondary text-center text-black rounded" type="button">
        <i class="fa-solid fa-user-gear"></i><%= link_to " ", edit_user_path(@user.id), class: 'nav-link text-black' %>
      </div>
      </div>
     </div>
    
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <div>Title</div>
        <%= f.text_field :title %>
      <div>Opinion</div>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><span><%= link_to "book.title", book_path(book.id) %></span></td>
      <td><span><%= book.body %></span></td>
      </tr>
    </tbody>
    <% end %>
  </table>


</div>



